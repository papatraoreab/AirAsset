<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AirAsset Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/style_dd_nav.css">

</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">

        
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AirAsset Logitics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class=""navbar-header"">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Partial("_LoginPartial")
            </div>
            <div>
                <ul id="menu-deroulant">
                    <li>
                        <a>Moyens</a>
                        <ul>
                            <li>
                                <!-- display to View only if the user has canEdit role-->
                                @if (User.IsInRole("canEdit"))
                                {
                                    @Html.ActionLink("Créer", "Create", "Moyens")
                                }
                            </li>
                            <li>
                                @Html.ActionLink("Lister", "Index", "Moyens")
                            </li>

                        </ul>
                    </li>
                    <!--
                     -->
                    <li>
                        <a>Exemplaires</a>
                        <ul>
                            <li>
                                <!-- display to View only if the user has canEdit role-->
                                @if (User.IsInRole("canEdit"))
                                {
                                    @Html.ActionLink("Créer", "Create", "Exemplaires")
                                }
                            </li>
                            <li>
                                @Html.ActionLink("Lister", "Index", "Exemplaires")
                            </li>

                        </ul>
                    </li>
                    <!--
                    -->
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>

            </div>
        </div>
    </div>
    <div>

    </div>
    <div class="container body-content">
        
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy @DateTime.Now.Year, Tous droits réservés - AirAsset Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
